@model DeviceSpecificationsViewModel

@{
    ViewData["Title"] = "Specification Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Device Specification</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Specification ID
        </dt>
        <dd class="col-sm-10">
            @Model.SpecificationID
        </dd>
        <dt class="col-sm-2">
            Model Name
        </dt>
        <dd class="col-sm-10">
            @Model.ModelName
        </dd>
        <dt class="col-sm-2">
            INFO
        </dt>
        <dd class="col-sm-10">
            @Model.INFO
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.SpecificationID">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
