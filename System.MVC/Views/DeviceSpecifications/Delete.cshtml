@model DeviceSpecificationsViewModel

@{
    ViewData["Title"] = "Delete Specification";
}

<h1>@ViewData["Title"]</h1>

<h4>Device Specification</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Specification ID
        </dt>
        <dd class="col-sm-10">
            @Model.SpecificationID
        </dd>
        <dt class="col-sm-2">
            Model Name
        </dt>
        <dd class="col-sm-10">
            @Model.ModelName
        </dd>
        <dt class="col-sm-2">
            INFO
        </dt>
        <dd class="col-sm-10">
            @Model.INFO
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="SpecificationID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
