@model DeviceViewModel

@{
    ViewData["Title"] = "Device Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Device</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Device ID
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceID
        </dd>
        <dt class="col-sm-2">
            Device Name
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceName
        </dd>
        <dt class="col-sm-2">
            Device Category
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceCategoryName
        </dd>
        <dt class="col-sm-2">
            Device Specification
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceSpecification
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.DeviceID">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
