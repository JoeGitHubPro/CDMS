@model LocationViewModel

@{
    ViewData["Title"] = "Location Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Location ID
        </dt>
        <dd class="col-sm-10">
            @Model.LocationID
        </dd>
        <dt class="col-sm-2">
            Location Name
        </dt>
        <dd class="col-sm-10">
            @Model.LocationName
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.LocationID">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
