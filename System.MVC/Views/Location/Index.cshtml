@model IEnumerable<LocationViewModel>

@{
    ViewData["Title"] = "Locations";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Location ID</th>
            <th>Location Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LocationID</td>
                <td>@item.LocationName</td>
                <td>
                    <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.LocationID">Details</a> |
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.LocationID">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.LocationID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
