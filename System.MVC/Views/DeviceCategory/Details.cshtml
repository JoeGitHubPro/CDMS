@model DeviceCategoryViewModel

@{
    ViewData["Title"] = "Device Category Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>DeviceCategory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Category ID
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryID
        </dd>
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class="col-sm-2">
            Category Description
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryDescription
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.CategoryID">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
