@model SponsorshipViewModel

@{
    ViewData["Title"] = "Sponsorship Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Sponsorship</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Sponsorship ID
        </dt>
        <dd class="col-sm-10">
            @Model.SponsorshipID
        </dd>
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Device Name
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceName
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Location Name
        </dt>
        <dd class="col-sm-10">
            @Model.LocationName
        </dd>
        <dt class="col-sm-2">
            Note
        </dt>
        <dd class="col-sm-10">
            @Model.Note
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.SponsorshipID">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
