@model SponsorshipViewModel

@{
    ViewData["Title"] = "Delete Sponsorship";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sponsorship</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Sponsorship ID
        </dt>
        <dd class="col-sm-10">
            @Model.SponsorshipID
        </dd>
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Device Name
        </dt>
        <dd class="col-sm-10">
            @Model.DeviceName
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Location Name
        </dt>
        <dd class="col-sm-10">
            @Model.LocationName
        </dd>
        <dt class="col-sm-2">
            Note
        </dt>
        <dd class="col-sm-10">
            @Model.Note
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SponsorshipID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
